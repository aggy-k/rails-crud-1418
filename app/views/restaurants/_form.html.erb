<%= form_with(model: restaurant) do |f| %>
  <div class="form">
    <%= f.label :name, class: "label" %>
    <%= f.text_field :name, class: "input" %>
    <%# name="restaurant[name]" %>
  </div>
  <div class="form">
    <%= f.label :address, class: "label" %>
    <%= f.text_area :address, class: "input" %>
  </div>
  <div class="form">
    <%= f.label :phone_number, class: "label" %>
    <%= f.text_field :phone_number, class: "input" %>
  </div>
  <div class="form">
    <%= f.label :cuisine, class: "label" %>
    <%= f.text_field :cuisine, class: "input" %>
  </div>
  <div class="form">
    <%= f.label :ratings, class: "label" %>
    <%= f.text_field :ratings, class: "input" %>
  </div>

  <div>
    <%= f.submit :submit, class: "submit-button" %>
  </div>
<% end %>
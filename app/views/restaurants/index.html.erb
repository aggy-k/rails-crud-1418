<h1>Restaurants#index</h1>

<%= link_to '+ Add Restaurant', new_restaurant_path %>

<% @restaurants.each do |restaurant| %>
  <%#= link_to restaurant_path(restaurant) do %>
  <%#= link_to restaurant_path(id: restaurant.id) do %>
  <%= link_to restaurant do %>
    <div>
      <h3><%= restaurant.name %></h3>
      <p><%= restaurant.address %></p>
    </div>
  <% end %>
  <%= link_to "Edit", edit_restaurant_path(restaurant) %>
  <%= link_to "Delete", restaurant_path(restaurant), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
<% end %>

